<article>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when "article_title" %}
      <div class="flex items-center justify-center">
        <div class="max-w-7xl">
          <a href="{{ blog.url }}" class="p-1 m-1 text-base uppercase bg-black text-white hover:text-yellow-500 font-bold">{{ blog.title }}</a>
          <h1 class="text-4xl text-left md:text-6xl font-medium">{{ article.title }}</h1>
        </div>
      </div>
      {% when "article_author" %}
      <div class="flex items-center justify-center">
        <div class="max-w-7xl text-center">
          {% if section.settings.enable_author %}
            <small>{{ article.author }}</small>
          {% endif %}
        </div>
      </div>
      {% when "article_published_date" %}
      <div class="flex items-center justify-center">
        <div class="max-w-7xl text-center">
          {% if section.settings.enable_published_date %}
            <time daytime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'on_date' }}</time>
          {% endif %}
        </div>
      </div>
      {% when "featured_image" %}
      <div class="max-w-2xl bg-blue-100 rounded-lg my-2 md:mx-auto overflow-hidden">
        {% if article.image != blank %}
          <img
            src="{{ article.image | img_url: 'large' }}"
            class=" w-full text-center h-80 md:h-96 object-cover object-center"
            loading="lazy"
            alt="{{ article.image.alt }}">
        {% endif %}
      </div>
      {% when "article_content" %}
      <div class="flex items-center justify-center">
        <div class="max-w-7xl">
          {{ article.content }}
        </div>
      </div>
  {% else %}
    {% endcase %}
  {% endfor %}
</article>

{% if blog.comments_enabled? %}
  <div id="comments" class="my-8">
    {% if artcle.comments_count > 0 %}
      {% else %}
        There are no comments in this Article.
    {% endif %}
  </div>
  <div id="comment-form" class="mb-8">
    {% form 'new_comment', article %}
      <div class="flex-1 mx-auto items-center px-4 max-w-4xl">
        <div class="px-1 md:flex mb-3">
          <div class="px-3 md:w-1/2">
            <label for="comment_author" class="text-black font-medium uppercase text-bold mb-2">Name</label>
            <input
              type="text"
              name="comment[author]"
              id="comment_author"
              class="w-full border py-3 px-4 mb-3 focus:outline-none bg-black text-white"
              placeholder="Jane Doe"
              required>
          </div>
          <div class="px-3 md:w-1/2">
            <label for="comment_email" class="text-black font-medium uppercase text-bold mb-2">Email</label>
            <input
              type="email"
              name="comment[email]"
              id="comment_email"
              class="w-full border py-3 px-4 mb-3 focus:outline-none bg-black text-white"
              placeholder="janedoe@gmail.com"
              required>
          </div>
        </div>
        <div class="px-1 md:flex mb-3">
          <div class="md:w-full px-3">
            <label for="comment_content" class="text-black font-medium uppercase text-bold mb-2">Comment</label>
            <textarea
              name="comment[body]"
              id="comment_content"
              class="w-full text-white bg-black resize-none h-20 py-2 px-3 focus:outline-none border"
              placeholder="Comment..."
              required></textarea>
          </div>
        </div>
        <div class="px-1 md:flex mb-3">
          <div class="md:w-full px-3">
            <input
              type="submit"
              value="Post Comment"
              class="w-full cursor-pointer px-4 py-2 border text-base font-medium text-white bg-black hover:bg-gray-800">
          </div>
        </div>
      </div>
    {% endform %}
  </div>
{% endif %}

{% schema %}
  {
    "name": "Template Article",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_author",
        "default": true,
        "label": "Display Author Name"
      }, {
        "type": "checkbox",
        "id": "enable_published_date",
        "default": true,
        "label": "Display Published Date"
      }
    ],
    "blocks": [
      {
        "type": "article_title",
        "name": "Title",
        "limit": 1
      },
      {
        "type": "article_author",
        "name": "Author",
        "limit": 1
      },
      {
        "type": "article_published_date",
        "name": "Published Date",
        "limit": 1
      },
      {
        "type": "featured_image",
        "name": "Thumbnail",
        "limit": 1
      }, {
        "type": "article_content",
        "name": "Content",
        "limit": 1
      }
    ]
  }
{% endschema %}