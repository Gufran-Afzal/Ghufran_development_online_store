<div class="container mx-auto">
    {% paginate search.results by 10 %}
    <h1 class="text-3xl my-4 font-extrabold text-center">Search Results</h1>
    <div class="flex items-center justify-center">
        <form action="{{ routes.search_url }}" method="get" class="border flex rounded">
            <input type="text" name="q" placeholder="Search" value="{{ search.terms | escape }}"
                class="px-4 py-2 w-80 border-none"
            >
            <button type="submit" class="bg-gray-900 hover:bg-gray-700 text-white border px-4">Search</button>
        </form>
    </div>
    {% if search.performed %}
        {% if search.results.size > 0 %}
            <div class="max-w-6xl mx-auto">
                <p class="text-gray-900 font-semibold text-center my-10">{{ search.results.size }} results for the search term {{ search.terms | escape }}</p>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    {% for item in search.results %}
                        {% case item.object_type %}
                            {% when 'product' %}
                                {% render 'product-card', product_product: item %}
                            {% else %}
                                
                            {% endcase %}
                    {% endfor %}
                </div>
            </div>
            {% else %}
                <div class="text-center my-4">
                    <p class="font-semibold">No results found for the search term: {{ search.terms | escape }}.Try to use a different keyword.</p>
                </div>
        {% endif %}
    {% endif %}

    {% render 'pagination', pagination: paginate %}
{% endpaginate %}
</div>

