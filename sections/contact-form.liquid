<div class="flex flex-col items-center my-8">
    {% if section.settings.title != blank %}
        <h1 class="text-3xl font-extrabold my-8 md:my-16">{{ section.settings.title }}</h1>
    {% endif %}
    {% form 'contact' %}
        {% if form.errors %}
            <div class="border p-5">
                <div class="flex flex-row items-center w-full my-3">
                <div class="text-red-500">
                    {% render 'icon-failed' %}
                </div>
                <div class="text-sm font-medium ml-3">
                    Oh No! Your message is not send.
                </div>
                </div>
                <ul class="px-4 mb-3 ml-7 list-decimal">
                {% for error in form.errors %}
                    <li>
                    <span>{{ form.errors.messages[error] }}</span>
                    </li>
                {%- endfor -%}
                </ul>
            </div>
            {% elsif form.posted_successfully? %}
                <div class="flex flex-row items-center w-full my-3 p-5">
                <div class="text-green-500">
                    {% render 'icon-success' %}
                </div>
                <div class="text-sm font-medium ml-3">
                    Your message is send successfully.
                </div>
                </div>
            {% endif %}
        <div class="max-w-6xl mx-auto justify-center flex items-center px-4">
            <div class="flex flex-wrap w-full">
                <div class="w-full md:w-1/2 px-3 mb-3">
                    <label for="contact_name" class="block text-gray-700 text-sm font-medium mb-2">Name</label>
                    <input type="text" name="contact[name]" id="contact_name" class="border border-gray-300 rounded p-2 w-full focus:outline-none focus:ring focus:border-blue-300">
                </div>
                <div class="w-full md:w-1/2 px-3 mb-3">
                    <label for="contact_email" class="block text-gray-700 text-sm font-medium mb-2">Email Address</label>
                    <input type=email" name="contact[email]" id="contact_email" class="border border-gray-300 rounded p-2 w-full focus:outline-none focus:ring focus:border-blue-300">
                </div>
                <div class="w-full px-3 mb-3">
                    <label for="contact_message" class="block text-gray-700 text-sm font-medium mb-2">Message</label>
                    <textarea name="contact[body]" id="contact_message" class="border border-gray-300 rounded p-2 w-full h-32 focus:outline-none focus:ring focus:border-blue-300"></textarea>
                </div>
                <div class="w-full px-3 mb-3 text-center">
                    <input type="submit" value="Submit" class="w-full bg-blue-500 text-white rounded py-2 px-4 hover:bg-blue-600 cursor-pointer">
                </div>
            </div>
        </div>


    {% endform %}
</div>




{% schema %}
{
    "name": "Contact Form",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        }
    ],
    "presets": [
    {
        "name": "Contact Form",
        "settings": {
        }
    }
    ]
}
{% endschema %}