<div class="w-full py-6 px-3">
    <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
        <a href="{{ product_product.url }}">
            {% if product_product.featured_image %}
                <div class="h-80 overflow-hidden">
                    <img class="h-full w-full transition duration-1000 ease-in-out hover:scale-105 transform" src="{{ product_product.featured_image | img_url: 'medium' }}" alt="{{ product_product.featured_image.alt }}">
                </div>
                {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
            {% endif %}
        </a>
        <div class="flex flex-col p-4">
            {% if section.settings.show_vendor_name %}
                <span class="text-sm text-gray-400">{{ product_product.vendor }}</span>
            {% endif %}
            <a class="text-black font-bold" href="{{ product_product.url }}">{{ product_product.title }}</a>
            <p class="text-gray-500">{{ product_product.price | money }}</p>
        </div>
    </div>
</div>


